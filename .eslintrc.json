{
  "extends": [
    "google",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "plugins": [
    "import",
    "react"
  ],
  "rules": {
    "max-len": ["error", 150],
    "indent": ["error", 2],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "arrowFunctions": true,
      "modules": true,
      "jsx": true
    }
  }
}